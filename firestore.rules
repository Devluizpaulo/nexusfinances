rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.userId == userId;
    }
    
    function isOwnerOfParentDebt(userId, debtId) {
      return get(/databases/$(database)/documents/users/$(userId)/debts/$(debtId)).data.userId == userId;
    }

    // User Profile Rules
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId) || isSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isOwner(userId);
    }

    // Subcollection Rules - any collection under a user is accessible only by that user
    match /users/{userId}/{collection}/{docId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isCreatingOwnData(userId);
      allow list: if isOwner(userId);
    }
    
    match /users/{userId}/debts/{debtId}/installments/{installmentId} {
        allow get, update, delete: if isOwnerOfParentDebt(userId, debtId);
        allow create: if isOwnerOfParentDebt(userId, debtId);
        allow list: if isOwnerOfParentDebt(userId, debtId);
    }

    // Collection group access for installments used in dashboard calendar
    match /{path=**}/installments/{installmentId} {
        allow get, list: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Public/Admin Collections
    match /education/{trackId} {
        allow get, list: if isSignedIn();
        allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{planId} {
        allow get, list: if isSignedIn();
        allow write: if isSuperAdmin();
    }
    
    match /logs/{logId} {
        allow get, list: if isSuperAdmin();
        allow create: if isCreatingOwnData(request.auth.uid);
        allow update, delete: if false;
    }
  }
}