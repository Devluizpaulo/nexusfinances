
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // Regras explícitas para subcoleções do usuário
    match /users/{userId}/incomes {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/incomes/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

    match /users/{userId}/expenses {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/expenses/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

    match /users/{userId}/debts {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/debts/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }
    
    match /users/{userId}/goals {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/goals/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }
    
    match /users/{userId}/budgets {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/budgets/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

    match /users/{userId}/notifications {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/notifications/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

    match /users/{userId}/creditCards {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/creditCards/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

     match /users/{userId}/rentalContracts {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/rentalContracts/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

     match /users/{userId}/healthProviders {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/healthProviders/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }

     match /users/{userId}/healthProfessionals {
      allow list, get, read: if isOwner(userId);
    }
    match /users/{userId}/healthProfessionals/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }
    
     match /users/{userId}/healthInsurances {
      allow list, get, read: if isOwner(userId);
    }
     match /users/{userId}/healthInsurances/{docId} {
      allow write, create, update, delete: if isOwner(userId);
    }
    
    // Regra para consulta de grupo (Collection Group Query)
    match /{path=**}/installments/{installmentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Coleções públicas
    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    // Logs
    match /logs/{document=**} {
      allow create: if request.auth != null;
      allow read, update, delete: if isSuperAdmin();
    }
  }
}
