
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções de Apoio
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      // Faz uma leitura segura no documento do próprio requisitante para checar o 'role'.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // Regras para Usuários
    // =================================

    match /users/{userId} {
      // O dono pode ler e escrever no seu próprio perfil.
      allow read, write: if isOwner(userId);
      
      // Superadmins podem listar, ler e modificar qualquer perfil de usuário.
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // Regra Curinga para TODAS as Subcoleções do Usuário
    // ==============================================================
    
    // Esta regra concede ao proprietário dos dados permissão total sobre todos
    // os documentos em todas as subcoleções dentro de seu próprio documento de usuário.
    // O `{document=**}` é um curinga recursivo que corresponde a qualquer documento em qualquer subcoleção.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // =================================
    // Coleções Públicas e de Admin
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
