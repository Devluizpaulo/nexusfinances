
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções de Apoio
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // Regras para Usuários
    // =================================

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // Regras para Subcoleções do Usuário (Versão Explícita)
    // ==============================================================
    
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write, update, delete: if isOwner(userId);
    }
    
    match /users/{userId}/{subcollection=**} {
        allow list, create: if isOwner(userId);
    }

    // =================================
    // Coleções Públicas e de Admin
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
