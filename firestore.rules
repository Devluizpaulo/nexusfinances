rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper simplificada
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Regra para documento do usuário
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Regra para TODAS as subcoleções do usuário
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // Coleções públicas (somente leitura)
    match /education/{document} {
      allow read: if request.auth != null;
    }

    match /subscriptionPlans/{document} {
      allow read: if request.auth != null;
    }

    // Logs (somente criação)
    match /logs/{document} {
      allow create: if request.auth != null;
    }
  }
}