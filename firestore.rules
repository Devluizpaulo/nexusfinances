
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar se o usuário é o dono do documento
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Função helper para verificar se o usuário autenticado é superadmin
    function isSuperAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // REGRA DE USUÁRIOS
    // Cada usuário pode ler e escrever em seu próprio documento.
    // Usuários com role == "superadmin" podem listar, ler e gerenciar todos os usuários.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // REGRAS PARA SUBCOLEÇÕES DO USUÁRIO
    // Permissões explícitas para cada subcoleção garantem que as queries de listagem funcionem.
    match /users/{userId}/incomes/{incomeId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/expenses/{expenseId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/debts/{debtId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }
    match /users/{userId}/debts/{debtId}/installments/{installmentId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/goals/{goalId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/budgets/{budgetId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/creditCards/{cardId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/rentalContracts/{contractId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
     match /users/{userId}/healthProviders/{providerId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
    match /users/{userId}/healthProfessionals/{professionalId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
    match /users/{userId}/healthInsurances/{insuranceId} {
        allow read, write, delete, create, list: if isOwner(userId);
    }
    match /users/{userId}/notifications/{notificationId} {
      allow read, write, delete, create, list: if isOwner(userId);
    }

    // REGRA PARA CONSULTA DE GRUPO (Collection Group Query)
    // Permite que um usuário leia a subcoleção 'installments' de qualquer dívida,
    // DESDE QUE o userId no documento da parcela seja o seu próprio.
    // Isso é necessário para o calendário encontrar parcelas vencidas em todas as dívidas.
    match /{path=**}/installments/{installmentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // COLEÇÕES PÚBLICAS
    // Qualquer usuário autenticado pode ler os dados de educação e planos.
    // Somente superadmins podem criar, atualizar ou deletar estes documentos.
    match /education/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }

    match /subscriptionPlans/{document} {
      allow read: if request.auth != null;
      allow create, update, delete: if isSuperAdmin();
    }

    // LOGS
    // Qualquer usuário autenticado pode criar um log.
    // Apenas superadmins podem listar, ler, atualizar ou deletar logs.
    match /logs/{document} {
      allow create: if request.auth != null;
      allow list, get, update, delete: if isSuperAdmin();
    }
  }
}
