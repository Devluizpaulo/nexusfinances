
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções de Apoio
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Função para verificar se o usuário que faz a requisição é um superadmin.
    // Faz uma leitura segura no documento do próprio requisitante para checar o 'role'.
    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // Regras para Usuários
    // =================================

    match /users/{userId} {
      // O dono pode ler e escrever no seu próprio perfil.
      allow read, write: if isOwner(userId);
      
      // Superadmins podem listar, ler, e modificar qualquer perfil de usuário.
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // Regras para Subcoleções do Usuário
    // ==============================================================

    match /users/{userId}/incomes/{incomeId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/expenses/{expenseId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/debts/{debtId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/debts/{debtId}/installments/{installmentId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/goals/{goalId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/budgets/{budgetId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/creditCards/{cardId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/rentalContracts/{contractId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/healthProviders/{providerId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/healthProfessionals/{professionalId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/healthInsurances/{insuranceId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/challenges52weeks/{challengeId} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{userId}/challenges52weeks/{challengeId}/deposits/{depositId} {
      allow read, write: if isOwner(userId);
    }

    // =================================
    // Coleções Públicas e de Admin
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
