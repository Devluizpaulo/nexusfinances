
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções de Apoio
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Função para verificar se o usuário que faz a requisição é um superadmin.
    // Faz uma leitura segura no documento do próprio requisitante para checar o 'role'.
    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // Regras para Usuários
    // =================================

    match /users/{userId} {
      // O dono pode ler e escrever no seu próprio perfil.
      allow read, write: if isOwner(userId);
      
      // Superadmins podem listar, ler, e modificar qualquer perfil de usuário.
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // Regras para Subcoleções do Usuário
    // Este padrão garante que apenas o dono possa acessar seus próprios dados aninhados.
    // ==============================================================

    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if isOwner(userId);
    }

    // ==============================================================
    // Regra de Grupo de Coleções (Collection Group Query Rule)
    // Permite que um usuário consulte uma coleção em todos os documentos de usuário
    // (ex: buscar todas as parcelas "installments" vencidas de um usuário específico).
    // Esta regra de segurança é CRUCIAL.
    // ==============================================================
    match /{path=**}/{subcollection}/{docId} {
      // Permite a leitura em uma consulta de grupo SE E SOMENTE SE o documento
      // na subcoleção tiver um campo `userId` que corresponda ao usuário autenticado.
      // Isso impede que um usuário liste dados de outros usuários.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // =================================
    // Coleções Públicas e de Admin
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
