
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Helper Functions
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // User Profile Rules
    // =================================

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // User Subcollections Rules
    // ==============================================================
    
    // This function secures all user-specific subcollections.
    // It allows a user to read and write only their own documents.
    function allowOwnerAccess(userId) {
      return {
        // Allow creating new documents if the user is the owner
        'allow create': if isOwner(userId),
        
        // Allow reading, updating, and deleting individual documents if the user is the owner
        'match /{docId}': {
          'allow read, update, delete': if isOwner(userId)
        },
        
        // IMPORTANT: Explicitly allow listing the collection if the user is the owner.
        // This is crucial for queries and `useCollection`.
        'allow list': if isOwner(userId)
      }
    }
    
    // Apply the generic rule to each subcollection
    match /users/{userId}/incomes/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/expenses/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/debts/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/goals/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/budgets/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/notifications/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/creditCards/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/rentalContracts/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthProviders/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthProfessionals/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthInsurances/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/challenges52weeks/{docId=**} {
      allow read, write: if isOwner(userId);
    }
    
    // =================================
    // Public and Admin Collections
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
