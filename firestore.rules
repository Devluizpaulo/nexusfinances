
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================
    // Funções de Apoio
    // =================================

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Função para verificar se o usuário que faz a requisição é um superadmin.
    // Faz uma leitura segura no documento do próprio requisitante para checar o 'role'.
    function isSuperAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin";
    }

    // =================================
    // Regras para Usuários
    // =================================

    match /users/{userId} {
      // O dono pode ler e escrever no seu próprio perfil.
      allow read, write: if isOwner(userId);
      
      // Superadmins podem listar, ler, e modificar qualquer perfil de usuário.
      // A chamada a isSuperAdmin() aqui é segura, pois não cria um ciclo de dependência
      // quando um admin lê o documento de OUTRO usuário.
      allow list, get, update, delete: if isSuperAdmin();
    }
    
    // ==============================================================
    // Regras Explícitas para Subcoleções do Usuário
    // Este padrão garante que apenas o dono possa acessar seus próprios dados aninhados.
    // Superadmins herdam o acesso através da regra no documento pai /users/{userId}.
    // ==============================================================

    match /users/{userId}/incomes/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/incomes {
      allow list: if isOwner(userId);
    }
    
    match /users/{userId}/expenses/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/expenses {
       allow list: if isOwner(userId);
    }
    
    match /users/{userId}/debts/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/debts {
      allow list: if isOwner(userId);
    }

    match /users/{userId}/goals/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/goals {
       allow list: if isOwner(userId);
    }
    
    match /users/{userId}/budgets/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/budgets {
      allow list: if isOwner(userId);
    }

    match /users/{userId}/notifications/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/notifications {
      allow list: if isOwner(userId);
    }

    match /users/{userId}/creditCards/{docId} {
       allow read, write: if isOwner(userId);
    }
    match /users/{userId}/creditCards {
      allow list: if isOwner(userId);
    }

    match /users/{userId}/rentalContracts/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/rentalContracts {
      allow list: if isOwner(userId);
    }

    match /users/{userId}/healthProviders/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthProviders {
       allow list: if isOwner(userId);
    }

    match /users/{userId}/healthProfessionals/{docId} {
      allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthProfessionals {
      allow list: if isOwner(userId);
    }
    
    match /users/{userId}/healthInsurances/{docId} {
       allow read, write: if isOwner(userId);
    }
    match /users/{userId}/healthInsurances {
       allow list: if isOwner(userId);
    }
    
    // Regra para consulta de grupo (Collection Group Query)
    match /{path=**}/installments/{installmentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // =================================
    // Coleções Públicas e de Admin
    // =================================

    match /education/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /subscriptionPlans/{document=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }

    match /logs/{logId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
